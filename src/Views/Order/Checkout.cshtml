@model Order

@section Style {
	<link rel="stylesheet"
		href="/css/shared.css" />
  <link rel="stylesheet"
    href="/css/pages/checkout.css" />
}

<h2 class="page-title">
	You're just one step away from your delicious pies.
</h2>

<div asp-validation-summary="All"></div>

<form asp-action="Checkout" method="post">
	<div class="form-group">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" />
	</div>

	<div class="form-group">
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" />
	</div>

	<div class="form-group">
		<label asp-for="AddressLine1"></label>
		<input asp-for="AddressLine1" />
		<span asp-validation-for="AddressLine1"></span>
	</div>

	<div class="form-group">
		<label asp-for="AddressLine2"></label>
		<input asp-for="AddressLine2" />
		<span asp-validation-for="AddressLine2"></span>
	</div>

	<div class="form-group">
		<label asp-for="ZipCode"></label>
		<input asp-for="ZipCode" />
		<span asp-validation-for="ZipCode"></span>
	</div>

	<div class="form-group">
		<label asp-for="City"></label>
		<input asp-for="City" />
		<span asp-validation-for="City"></span>
	</div>

	<div class="form-group">
		<label asp-for="State"></label>
		<input asp-for="State" />
		<span asp-validation-for="State"></span>
	</div>

	<div class="form-group">
		<label asp-for="Country"></label>
		<input asp-for="Country" />
		<span asp-validation-for="Country"></span>
	</div>

	<div class="form-group">
		<label asp-for="PhoneNumber"></label>
		<input asp-for="PhoneNumber" />
		<span asp-validation-for="PhoneNumber"></span>
	</div>

	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" />
		<span asp-validation-for="Email"></span>
	</div>

	<div class="form-group">
		<input type="submit" value="Complete order" />
	</div>
</form>