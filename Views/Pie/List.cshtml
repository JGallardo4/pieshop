@model IEnumerable<pieshop.Models.Pie>

@section Style {
	<link rel="stylesheet"
		href="/css/shared.css" />
	<link rel="stylesheet"
		href="/css/pages/pies.css" />
}

<div id="pie-grid">
	@foreach (var pie in Model)
	{
		<div class="pie">
			<img src=@pie.ImageUrl
				class="pie-image"
				alt="@pie.Name image" />
			<h2>
				<a asp-controller="Pie" asp-action="Details" asp-route-id="@pie.PieId">@pie.Name</a>
			</h2>
			<h3 class="price">@pie.Price.ToString("c")</h3>
			<h4>@pie.Category.CategoryName</h4>
		</div>
	}
</div>

