@model Pie

@section Style {
	<link rel="stylesheet"
		href="/css/shared.css" />
	<link rel="stylesheet"
		href="/css/pages/pie-details.css" />
}

<h2>@Model.Name</h2>

<div class="thumbnail">
	<img alt="@Model.Name" src="@Model.ImageUrl">
	<div class="caption-full">
		<h3>
			<a asp-controller="Pie" asp-action="Details" asp-route-id="pie.PieId">@Model.Name</a>
		</h3>
		<h4>@Model.ShortDescription</h4>
		<p>@Model.LongDescription</p>
	</div>
</div>
